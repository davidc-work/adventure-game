    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signed Up</title>
    <style>
        body, html {
            background-color: black;
            color: white;
            font-family: system-ui;
        }
    </style>
</head>
<script src="/scripts/cookiecheck.js"></script>
<body>
    <p>Welcome, <%-user%></p>
    <p id="display">You will be redirected to login in 5 seconds...</p>
</body>
<script>
    var x = 4;
    var interval = setInterval(() => {
        if (x == 0) {
            window.location.href = '/login';
            return ;
        }
        document.getElementById('display').innerHTML = 'You will be redirected to login in ' + x + ' seconds...';
        x--;
    }, 1000);
</script>
</html>